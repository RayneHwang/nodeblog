div.panel.panel-default
	if session && session.user
		div.panel-heading My Account
		div.panel-body
			div.inner
				div
					a(href="/users/home?userName="+session.user.userName).user-avatar
						img(src=session.user.userAvatar)
					span.user-name
						a(href="/users/home?userName=" + session.user.userName) #{session.user.userName}
			//div.add-topic-btn
				a(href="/topic/add").btn.btn-primary Add Topic
	else
		img(src="/images/lei.jpg" style="display:block; margin:0 auto;width:70%;padding:10% 0 0 0;").img-responsive
		div.panel-body
			div.inner
				p(style="text-align:center;font-family:consolas;color:#777676;") Welcome to Lei's blog.
